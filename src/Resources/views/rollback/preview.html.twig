{% extends '@Audit/layout.html.twig' %}

{% block title %}Rollback Preview - Audit System{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('audit_rollback_index') }}">Rollback</a></li>
    <li class="breadcrumb-item active">Preview</li>
{% endblock %}

{% block page_title %}
    Rollback Preview
    <small class="text-muted">Audit Log #{{ audit_log.id }}</small>
{% endblock %}

{% block page_actions %}
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('audit_log_show', {id: audit_log.id}) }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-eye"></i> View Log
            </a>
            <a href="{{ path('audit_rollback_index') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Rollback
            </a>
        </div>
        
        {% if not has_conflicts %}
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-success" onclick="executeRollback()">
                    <i class="bi bi-arrow-counterclockwise"></i> Execute Rollback
                </button>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block content %}
<!-- Alert Messages -->
{% if has_conflicts %}
    <div class="alert alert-danger" role="alert">
        <h5 class="alert-heading">
            <i class="bi bi-exclamation-triangle"></i>
            Conflicts Detected
        </h5>
        <p class="mb-0">
            This rollback cannot be executed because conflicts were detected. 
            The entity has been modified since this audit log was created.
        </p>
    </div>
{% else %}
    <div class="alert alert-warning" role="alert">
        <h5 class="alert-heading">
            <i class="bi bi-info-circle"></i>
            Rollback Preview
        </h5>
        <p class="mb-0">
            Review the changes below before executing the rollback. 
            This operation will restore the entity to its previous state.
        </p>
    </div>
{% endif %}

<!-- Audit Log Overview -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i>
                    Audit Log Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Log ID:</dt>
                            <dd class="col-sm-8">#{{ audit_log.id }}</dd>
                            
                            <dt class="col-sm-4">Operation:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-{{ audit_log.operation == 'create' ? 'success' : (audit_log.operation == 'update' ? 'warning' : 'danger') }}">
                                    <i class="bi bi-{{ audit_log.operation == 'create' ? 'plus' : (audit_log.operation == 'update' ? 'pencil' : 'trash') }}"></i>
                                    {{ audit_log.operation|title }}
                                </span>
                            </dd>
                            
                            <dt class="col-sm-4">Entity:</dt>
                            <dd class="col-sm-8">
                                <strong>{{ audit_log.entityClass|split('\\')|last }}</strong>
                                <br>
                                <small class="text-muted">ID: {{ audit_log.entityId }}</small>
                            </dd>
                            
                            <dt class="col-sm-4">User:</dt>
                            <dd class="col-sm-8">
                                {% if audit_log.username %}
                                    <strong>{{ audit_log.username }}</strong>
                                    {% if audit_log.userId %}
                                        <br><small class="text-muted">ID: {{ audit_log.userId }}</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">System</span>
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                    
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Date:</dt>
                            <dd class="col-sm-8">
                                {{ audit_log.createdAt|date('Y-m-d H:i:s') }}
                                <br>
                                <small class="text-muted">{{ audit_log.createdAt|date_diff|ago }}</small>
                            </dd>
                            
                            <dt class="col-sm-4">IP Address:</dt>
                            <dd class="col-sm-8">
                                {{ audit_log.ipAddress ?: 'N/A' }}
                            </dd>
                            
                            <dt class="col-sm-4">User Agent:</dt>
                            <dd class="col-sm-8">
                                {% if audit_log.userAgent %}
                                    <span class="text-truncate d-inline-block" style="max-width: 200px;" 
                                          data-bs-toggle="tooltip" title="{{ audit_log.userAgent }}">
                                        {{ audit_log.userAgent }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">N/A</span>
                                {% endif %}
                            </dd>
                            
                            <dt class="col-sm-4">Changes:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary">{{ audit_log.changes|length }} fields</span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-shield-check"></i>
                    Rollback Status
                </h5>
            </div>
            <div class="card-body">
                {% if has_conflicts %}
                    <div class="text-center">
                        <i class="bi bi-x-circle text-danger" style="font-size: 3rem;"></i>
                        <h6 class="mt-2 text-danger">Cannot Execute</h6>
                        <p class="text-muted mb-0">Conflicts detected</p>
                    </div>
                {% else %}
                    <div class="text-center">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                        <h6 class="mt-2 text-success">Ready to Execute</h6>
                        <p class="text-muted mb-0">No conflicts found</p>
                    </div>
                {% endif %}
                
                <hr>
                
                <div class="d-grid gap-2">
                    {% if not has_conflicts %}
                        <button type="button" class="btn btn-success" onclick="executeRollback()">
                            <i class="bi bi-arrow-counterclockwise"></i>
                            Execute Rollback
                        </button>
                    {% endif %}
                    
                    <button type="button" class="btn btn-outline-secondary" onclick="refreshConflictCheck()">
                        <i class="bi bi-arrow-clockwise"></i>
                        Refresh Check
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Conflicts Section -->
{% if has_conflicts %}
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-exclamation-triangle"></i>
                Detected Conflicts
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h6 class="alert-heading">Why can't this rollback be executed?</h6>
                <p class="mb-0">
                    The entity has been modified since this audit log was created. 
                    Executing this rollback could result in data loss or inconsistencies.
                </p>
            </div>
            
            {% if conflicts is defined and conflicts is not empty %}
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Field</th>
                                <th>Expected Value</th>
                                <th>Current Value</th>
                                <th>Conflict Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for conflict in conflicts %}
                                <tr>
                                    <td><code>{{ conflict.field }}</code></td>
                                    <td>
                                        {% if conflict.expected_value is null %}
                                            <span class="text-muted">null</span>
                                        {% else %}
                                            <code>{{ conflict.expected_value|slice(0, 50) }}{% if conflict.expected_value|length > 50 %}...{% endif %}</code>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if conflict.current_value is null %}
                                            <span class="text-muted">null</span>
                                        {% else %}
                                            <code>{{ conflict.current_value|slice(0, 50) }}{% if conflict.current_value|length > 50 %}...{% endif %}</code>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-warning">{{ conflict.type|title }}</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
            
            <div class="mt-3">
                <h6>Resolution Options:</h6>
                <ul class="mb-0">
                    <li>Review the current entity state and determine if rollback is still needed</li>
                    <li>Create a new manual change to achieve the desired state</li>
                    <li>Use the entity history to find a more recent rollback point</li>
                </ul>
            </div>
        </div>
    </div>
{% endif %}

<!-- Changes Preview -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-list-ul"></i>
            Changes to be Applied
            <small class="text-muted">({{ audit_log.changes|length }} fields)</small>
        </h5>
    </div>
    <div class="card-body p-0">
        {% if audit_log.changes is not empty %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%;">Field</th>
                            <th style="width: 35%;">Current Value</th>
                            <th style="width: 35%;">Will Become</th>
                            <th style="width: 5%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for change in audit_log.changes %}
                            <tr class="{{ has_conflicts and change.field in conflict_fields|default([]) ? 'table-danger' : '' }}">
                                <td>
                                    <code class="fw-bold">{{ change.field }}</code>
                                    {% if has_conflicts and change.field in conflict_fields|default([]) %}
                                        <br>
                                        <small class="text-danger">
                                            <i class="bi bi-exclamation-triangle"></i> Conflict
                                        </small>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="change-value current-value">
                                        {% if change.newValue is null %}
                                            <span class="text-muted fst-italic">null</span>
                                        {% elseif change.newValue is same as(true) %}
                                            <span class="text-success">true</span>
                                        {% elseif change.newValue is same as(false) %}
                                            <span class="text-danger">false</span>
                                        {% elseif change.newValue is iterable %}
                                            <details>
                                                <summary class="text-info">Array/Object ({{ change.newValue|length }} items)</summary>
                                                <pre class="mt-2 mb-0"><code>{{ change.newValue|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                            </details>
                                        {% else %}
                                            <span class="text-break">{{ change.newValue|slice(0, 100) }}{% if change.newValue|length > 100 %}...{% endif %}</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    <div class="change-value old-value">
                                        {% if change.oldValue is null %}
                                            <span class="text-muted fst-italic">null</span>
                                        {% elseif change.oldValue is same as(true) %}
                                            <span class="text-success">true</span>
                                        {% elseif change.oldValue is same as(false) %}
                                            <span class="text-danger">false</span>
                                        {% elseif change.oldValue is iterable %}
                                            <details>
                                                <summary class="text-info">Array/Object ({{ change.oldValue|length }} items)</summary>
                                                <pre class="mt-2 mb-0"><code>{{ change.oldValue|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                            </details>
                                        {% else %}
                                            <span class="text-break">{{ change.oldValue|slice(0, 100) }}{% if change.oldValue|length > 100 %}...{% endif %}</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td class="text-center">
                                    {% if change.oldValue is null and change.newValue is not null %}
                                        <i class="bi bi-arrow-left text-danger" data-bs-toggle="tooltip" title="Remove value"></i>
                                    {% elseif change.oldValue is not null and change.newValue is null %}
                                        <i class="bi bi-arrow-right text-success" data-bs-toggle="tooltip" title="Add value"></i>
                                    {% else %}
                                        <i class="bi bi-arrow-left-right text-warning" data-bs-toggle="tooltip" title="Change value"></i>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-4">
                <i class="bi bi-info-circle" style="font-size: 3rem; opacity: 0.3;"></i>
                <h5 class="mt-3 text-muted">No Field Changes</h5>
                <p class="text-muted mb-0">This audit log contains no field changes to rollback.</p>
            </div>
        {% endif %}
    </div>
</div>

<!-- Related Information -->
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history"></i>
                    Related Logs
                </h5>
            </div>
            <div class="card-body">
                {% if related_logs is defined and related_logs is not empty %}
                    <div class="list-group list-group-flush">
                        {% for log in related_logs|slice(0, 5) %}
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">
                                            <a href="{{ path('audit_log_show', {id: log.id}) }}" class="text-decoration-none">
                                                #{{ log.id }}
                                            </a>
                                            <span class="badge bg-{{ log.operation == 'create' ? 'success' : (log.operation == 'update' ? 'warning' : 'danger') }} ms-2">
                                                {{ log.operation|title }}
                                            </span>
                                        </div>
                                        <small class="text-muted">
                                            {{ log.createdAt|date('M j, H:i') }} by {{ log.username ?: 'System' }}
                                        </small>
                                    </div>
                                    <small class="text-muted">{{ log.changes|length }} changes</small>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                    {% if related_logs|length > 5 %}
                        <div class="text-center mt-3">
                            <a href="{{ path('audit_log_entity_history', {entityClass: audit_log.entityClass, entityId: audit_log.entityId}) }}" 
                               class="btn btn-sm btn-outline-primary">
                                View All {{ related_logs|length }} Logs
                            </a>
                        </div>
                    {% endif %}
                {% else %}
                    <div class="text-center py-3">
                        <i class="bi bi-info-circle text-muted"></i>
                        <p class="text-muted mb-0">No related logs found</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i>
                    Rollback Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Rollback Type:</dt>
                    <dd class="col-sm-7">
                        {% if audit_log.operation == 'create' %}
                            <span class="badge bg-danger">Delete Entity</span>
                            <br><small class="text-muted">Will remove the created entity</small>
                        {% elseif audit_log.operation == 'update' %}
                            <span class="badge bg-warning">Restore Fields</span>
                            <br><small class="text-muted">Will restore {{ audit_log.changes|length }} field(s)</small>
                        {% elseif audit_log.operation == 'delete' %}
                            <span class="badge bg-success">Recreate Entity</span>
                            <br><small class="text-muted">Will recreate the deleted entity</small>
                        {% endif %}
                    </dd>
                    
                    <dt class="col-sm-5">Estimated Time:</dt>
                    <dd class="col-sm-7">
                        <span class="text-muted">&lt; 1 second</span>
                    </dd>
                    
                    <dt class="col-sm-5">Backup Created:</dt>
                    <dd class="col-sm-7">
                        <span class="text-success">
                            <i class="bi bi-check-circle"></i> Yes
                        </span>
                        <br><small class="text-muted">Current state will be logged</small>
                    </dd>
                    
                    <dt class="col-sm-5">Reversible:</dt>
                    <dd class="col-sm-7">
                        <span class="text-success">
                            <i class="bi bi-check-circle"></i> Yes
                        </span>
                        <br><small class="text-muted">This rollback can be undone</small>
                    </dd>
                </dl>
                
                {% if not has_conflicts %}
                    <div class="alert alert-info alert-sm mt-3">
                        <i class="bi bi-info-circle"></i>
                        <strong>Note:</strong> A new audit log will be created when this rollback is executed, 
                        allowing you to undo this operation if needed.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
// Execute rollback
function executeRollback() {
    AuditSystem.confirm(
        'Are you sure you want to execute this rollback? This will restore the entity to its previous state.',
        function() {
            AuditSystem.showLoading('Executing rollback...');
            
            fetch('{{ path("audit_rollback_execute", {id: audit_log.id}) }}', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': '{{ csrf_token("rollback") }}'
                }
            })
            .then(response => response.json())
            .then(data => {
                AuditSystem.hideLoading();
                
                if (data.success) {
                    AuditSystem.toast('Rollback executed successfully', 'success');
                    
                    // Redirect to rollback history or entity
                    if (data.rollback_id) {
                        window.location.href = '{{ path("audit_rollback_history", {id: "__ID__"}) }}'.replace('__ID__', data.rollback_id);
                    } else {
                        window.location.href = '{{ path("audit_rollback_index") }}';
                    }
                } else {
                    AuditSystem.toast(data.message || 'Failed to execute rollback', 'error');
                    
                    // If conflicts were detected, refresh the page
                    if (data.conflicts) {
                        setTimeout(() => window.location.reload(), 2000);
                    }
                }
            })
            .catch(error => {
                AuditSystem.hideLoading();
                AuditSystem.toast('Failed to execute rollback', 'error');
                console.error('Rollback error:', error);
            });
        }
    );
}

// Refresh conflict check
function refreshConflictCheck() {
    AuditSystem.showLoading('Checking for conflicts...');
    
    fetch('{{ path("audit_api_rollback_conflicts", {id: audit_log.id}) }}', {
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        AuditSystem.hideLoading();
        
        if (data.has_conflicts !== {{ has_conflicts ? 'true' : 'false' }}) {
            AuditSystem.toast('Conflict status has changed. Refreshing page...', 'info');
            setTimeout(() => window.location.reload(), 1000);
        } else {
            AuditSystem.toast('Conflict check completed. No changes detected.', 'success');
        }
    })
    .catch(error => {
        AuditSystem.hideLoading();
        AuditSystem.toast('Failed to check conflicts', 'error');
        console.error('Conflict check error:', error);
    });
}

// Initialize tooltips
document.addEventListener('DOMContentLoaded', function() {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script>
{% endblock %}

