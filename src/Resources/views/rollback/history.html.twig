{% extends '@Audit/layout.html.twig' %}

{% block title %}Rollback History - Audit System{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('audit_rollback_index') }}">Rollback</a></li>
    <li class="breadcrumb-item active">History #{{ rollback_history.id }}</li>
{% endblock %}

{% block page_title %}
    Rollback History
    <small class="text-muted">#{{ rollback_history.id }}</small>
{% endblock %}

{% block page_actions %}
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('audit_log_show', {id: rollback_history.originalAuditLogId}) }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-file-text"></i> Original Log
            </a>
            {% if rollback_history.newAuditLogId %}
                <a href="{{ path('audit_log_show', {id: rollback_history.newAuditLogId}) }}" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-file-text"></i> Rollback Log
                </a>
            {% endif %}
        </div>
        
        <div class="btn-group me-2">
            <a href="{{ path('audit_rollback_index') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Rollback
            </a>
            {% if rollback_history.status == 'success' and rollback_history.newAuditLogId %}
                <a href="{{ path('audit_rollback_preview', {id: rollback_history.newAuditLogId}) }}" class="btn btn-sm btn-outline-warning">
                    <i class="bi bi-arrow-counterclockwise"></i> Undo This Rollback
                </a>
            {% endif %}
        </div>
        
        {% if rollback_history.status == 'success' %}
            <div class="btn-group">
                <a href="{{ path('audit_log_entity_history', {entityClass: rollback_history.entityClass, entityId: rollback_history.entityId}) }}" class="btn btn-sm btn-primary">
                    <i class="bi bi-clock-history"></i> Entity History
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block content %}
<!-- Status Alert -->
{% if rollback_history.status == 'success' %}
    <div class="alert alert-success" role="alert">
        <h5 class="alert-heading">
            <i class="bi bi-check-circle"></i>
            Rollback Completed Successfully
        </h5>
        <p class="mb-0">
            This rollback operation was executed successfully on {{ rollback_history.executedAt|date('M j, Y \\a\\t H:i:s') }}.
            {% if rollback_history.changesApplied %}
                {{ rollback_history.changesApplied }} field(s) were modified.
            {% endif %}
        </p>
    </div>
{% elseif rollback_history.status == 'failed' %}
    <div class="alert alert-danger" role="alert">
        <h5 class="alert-heading">
            <i class="bi bi-x-circle"></i>
            Rollback Failed
        </h5>
        <p class="mb-0">
            This rollback operation failed on {{ rollback_history.executedAt|date('M j, Y \\a\\t H:i:s') }}.
            {% if rollback_history.errorMessage %}
                Error: {{ rollback_history.errorMessage }}
            {% endif %}
        </p>
    </div>
{% elseif rollback_history.status == 'pending' %}
    <div class="alert alert-warning" role="alert">
        <h5 class="alert-heading">
            <i class="bi bi-clock"></i>
            Rollback Pending
        </h5>
        <p class="mb-0">
            This rollback operation is still pending execution.
        </p>
    </div>
{% endif %}

<!-- Rollback Overview -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i>
                    Rollback Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Rollback ID:</dt>
                            <dd class="col-sm-7">#{{ rollback_history.id }}</dd>
                            
                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-{{ rollback_history.status == 'success' ? 'success' : (rollback_history.status == 'failed' ? 'danger' : 'warning') }}">
                                    <i class="bi bi-{{ rollback_history.status == 'success' ? 'check-circle' : (rollback_history.status == 'failed' ? 'x-circle' : 'clock') }}"></i>
                                    {{ rollback_history.status|title }}
                                </span>
                            </dd>
                            
                            <dt class="col-sm-5">Type:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-info">{{ rollback_history.type|title }}</span>
                            </dd>
                            
                            <dt class="col-sm-5">Entity:</dt>
                            <dd class="col-sm-7">
                                <strong>{{ rollback_history.entityClass|split('\\')|last }}</strong>
                                <br>
                                <small class="text-muted">ID: {{ rollback_history.entityId }}</small>
                            </dd>
                            
                            <dt class="col-sm-5">Executed By:</dt>
                            <dd class="col-sm-7">
                                {% if rollback_history.executedBy %}
                                    <strong>{{ rollback_history.executedBy }}</strong>
                                    {% if rollback_history.executedByUserId %}
                                        <br><small class="text-muted">ID: {{ rollback_history.executedByUserId }}</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">System</span>
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                    
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Executed At:</dt>
                            <dd class="col-sm-7">
                                {{ rollback_history.executedAt|date('Y-m-d H:i:s') }}
                                <br>
                                <small class="text-muted">{{ rollback_history.executedAt|date_diff|ago }}</small>
                            </dd>
                            
                            <dt class="col-sm-5">Duration:</dt>
                            <dd class="col-sm-7">
                                {% if rollback_history.executionTime %}
                                    {{ (rollback_history.executionTime * 1000)|number_format(0) }}ms
                                {% else %}
                                    <span class="text-muted">N/A</span>
                                {% endif %}
                            </dd>
                            
                            <dt class="col-sm-5">Changes Applied:</dt>
                            <dd class="col-sm-7">
                                {% if rollback_history.status == 'success' %}
                                    <span class="badge bg-primary">{{ rollback_history.changesApplied ?: 0 }} fields</span>
                                {% else %}
                                    <span class="text-muted">N/A</span>
                                {% endif %}
                            </dd>
                            
                            <dt class="col-sm-5">Original Log:</dt>
                            <dd class="col-sm-7">
                                <a href="{{ path('audit_log_show', {id: rollback_history.originalAuditLogId}) }}" class="text-decoration-none">
                                    #{{ rollback_history.originalAuditLogId }}
                                </a>
                            </dd>
                            
                            <dt class="col-sm-5">Rollback Log:</dt>
                            <dd class="col-sm-7">
                                {% if rollback_history.newAuditLogId %}
                                    <a href="{{ path('audit_log_show', {id: rollback_history.newAuditLogId}) }}" class="text-decoration-none">
                                        #{{ rollback_history.newAuditLogId }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">Not created</span>
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-gear"></i>
                    Actions
                </h5>
            </div>
            <div class="card-body">
                {% if rollback_history.status == 'success' %}
                    <div class="d-grid gap-2">
                        {% if rollback_history.newAuditLogId %}
                            <a href="{{ path('audit_rollback_preview', {id: rollback_history.newAuditLogId}) }}" class="btn btn-warning">
                                <i class="bi bi-arrow-counterclockwise"></i>
                                Undo This Rollback
                            </a>
                        {% endif %}
                        
                        <a href="{{ path('audit_log_entity_history', {entityClass: rollback_history.entityClass, entityId: rollback_history.entityId}) }}" class="btn btn-primary">
                            <i class="bi bi-clock-history"></i>
                            View Entity History
                        </a>
                        
                        <button type="button" class="btn btn-outline-danger" onclick="deleteRollbackHistory()">
                            <i class="bi bi-trash"></i>
                            Delete History
                        </button>
                    </div>
                {% elseif rollback_history.status == 'failed' %}
                    <div class="d-grid gap-2">
                        <a href="{{ path('audit_rollback_preview', {id: rollback_history.originalAuditLogId}) }}" class="btn btn-primary">
                            <i class="bi bi-arrow-clockwise"></i>
                            Try Again
                        </a>
                        
                        <button type="button" class="btn btn-outline-danger" onclick="deleteRollbackHistory()">
                            <i class="bi bi-trash"></i>
                            Delete History
                        </button>
                    </div>
                {% else %}
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-secondary" disabled>
                            <i class="bi bi-clock"></i>
                            Pending Execution
                        </button>
                    </div>
                {% endif %}
                
                <hr>
                
                <div class="text-center">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        This operation was logged for audit purposes
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Applied Changes (Success Only) -->
{% if rollback_history.status == 'success' and rollback_history.appliedChanges is defined and rollback_history.appliedChanges is not empty %}
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-check2-square"></i>
                Applied Changes
                <small class="text-muted">({{ rollback_history.appliedChanges|length }} fields)</small>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%;">Field</th>
                            <th style="width: 35%;">Previous Value</th>
                            <th style="width: 35%;">Restored Value</th>
                            <th style="width: 5%;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for change in rollback_history.appliedChanges %}
                            <tr>
                                <td>
                                    <code class="fw-bold">{{ change.field }}</code>
                                </td>
                                <td>
                                    <div class="change-value previous-value">
                                        {% if change.previous_value is null %}
                                            <span class="text-muted fst-italic">null</span>
                                        {% elseif change.previous_value is same as(true) %}
                                            <span class="text-success">true</span>
                                        {% elseif change.previous_value is same as(false) %}
                                            <span class="text-danger">false</span>
                                        {% elseif change.previous_value is iterable %}
                                            <details>
                                                <summary class="text-info">Array/Object ({{ change.previous_value|length }} items)</summary>
                                                <pre class="mt-2 mb-0"><code>{{ change.previous_value|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                            </details>
                                        {% else %}
                                            <span class="text-break">{{ change.previous_value|slice(0, 100) }}{% if change.previous_value|length > 100 %}...{% endif %}</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    <div class="change-value restored-value">
                                        {% if change.restored_value is null %}
                                            <span class="text-muted fst-italic">null</span>
                                        {% elseif change.restored_value is same as(true) %}
                                            <span class="text-success">true</span>
                                        {% elseif change.restored_value is same as(false) %}
                                            <span class="text-danger">false</span>
                                        {% elseif change.restored_value is iterable %}
                                            <details>
                                                <summary class="text-info">Array/Object ({{ change.restored_value|length }} items)</summary>
                                                <pre class="mt-2 mb-0"><code>{{ change.restored_value|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                            </details>
                                        {% else %}
                                            <span class="text-break">{{ change.restored_value|slice(0, 100) }}{% if change.restored_value|length > 100 %}...{% endif %}</span>
                                        {% endif %}
                                    </div>
                                </td>
                                <td class="text-center">
                                    <i class="bi bi-check-circle text-success" data-bs-toggle="tooltip" title="Successfully applied"></i>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endif %}

<!-- Error Details (Failure Only) -->
{% if rollback_history.status == 'failed' %}
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-exclamation-triangle"></i>
                Error Details
            </h5>
        </div>
        <div class="card-body">
            {% if rollback_history.errorMessage %}
                <div class="alert alert-danger">
                    <h6 class="alert-heading">Error Message:</h6>
                    <p class="mb-0">{{ rollback_history.errorMessage }}</p>
                </div>
            {% endif %}
            
            {% if rollback_history.errorCode %}
                <dl class="row">
                    <dt class="col-sm-3">Error Code:</dt>
                    <dd class="col-sm-9"><code>{{ rollback_history.errorCode }}</code></dd>
                </dl>
            {% endif %}
            
            {% if rollback_history.errorDetails is defined and rollback_history.errorDetails is not empty %}
                <h6>Additional Details:</h6>
                <pre class="bg-light p-3 border rounded"><code>{{ rollback_history.errorDetails|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
            {% endif %}
            
            <div class="mt-3">
                <h6>Troubleshooting:</h6>
                <ul class="mb-0">
                    <li>Check if the entity still exists in the database</li>
                    <li>Verify that no conflicting changes have been made</li>
                    <li>Ensure you have the necessary permissions</li>
                    <li>Review the original audit log for any issues</li>
                </ul>
            </div>
        </div>
    </div>
{% endif %}

<!-- Metadata -->
{% if rollback_history.metadata is defined and rollback_history.metadata is not empty %}
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-tags"></i>
                Metadata
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th style="width: 30%;">Key</th>
                            <th style="width: 70%;">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, value in rollback_history.metadata %}
                            <tr>
                                <td><code>{{ key }}</code></td>
                                <td>
                                    {% if value is iterable %}
                                        <details>
                                            <summary class="text-info">Array/Object ({{ value|length }} items)</summary>
                                            <pre class="mt-2 mb-0"><code>{{ value|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                        </details>
                                    {% else %}
                                        <span class="text-break">{{ value }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endif %}

<!-- Related Rollbacks -->
{% if related_rollbacks is defined and related_rollbacks is not empty %}
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-link-45deg"></i>
                Related Rollbacks
                <small class="text-muted">({{ related_rollbacks|length }})</small>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Executed At</th>
                            <th>Executed By</th>
                            <th>Changes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for rollback in related_rollbacks %}
                            <tr>
                                <td>
                                    <a href="{{ path('audit_rollback_history', {id: rollback.id}) }}" class="text-decoration-none">
                                        #{{ rollback.id }}
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ rollback.type|title }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-{{ rollback.status == 'success' ? 'success' : (rollback.status == 'failed' ? 'danger' : 'warning') }}">
                                        {{ rollback.status|title }}
                                    </span>
                                </td>
                                <td>
                                    {{ rollback.executedAt|date('M j, H:i') }}
                                    <br>
                                    <small class="text-muted">{{ rollback.executedAt|date_diff|ago }}</small>
                                </td>
                                <td>{{ rollback.executedBy ?: 'System' }}</td>
                                <td>
                                    {% if rollback.changesApplied %}
                                        <span class="badge bg-primary">{{ rollback.changesApplied }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('audit_rollback_history', {id: rollback.id}) }}" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        {% if rollback.status == 'success' and rollback.newAuditLogId %}
                                            <a href="{{ path('audit_rollback_preview', {id: rollback.newAuditLogId}) }}" class="btn btn-outline-warning btn-sm">
                                                <i class="bi bi-arrow-counterclockwise"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
// Delete rollback history
function deleteRollbackHistory() {
    AuditSystem.confirm(
        'Are you sure you want to delete this rollback history? This action cannot be undone.',
        function() {
            AuditSystem.showLoading('Deleting rollback history...');
            
            fetch('{{ path("audit_api_rollback_history_delete", {id: rollback_history.id}) }}', {
                method: 'DELETE',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': '{{ csrf_token("rollback_delete") }}'
                }
            })
            .then(response => response.json())
            .then(data => {
                AuditSystem.hideLoading();
                
                if (data.success) {
                    AuditSystem.toast('Rollback history deleted successfully', 'success');
                    window.location.href = '{{ path("audit_rollback_index") }}';
                } else {
                    AuditSystem.toast(data.message || 'Failed to delete rollback history', 'error');
                }
            })
            .catch(error => {
                AuditSystem.hideLoading();
                AuditSystem.toast('Failed to delete rollback history', 'error');
                console.error('Delete error:', error);
            });
        }
    );
}

// Initialize tooltips
document.addEventListener('DOMContentLoaded', function() {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script>
{% endblock %}

